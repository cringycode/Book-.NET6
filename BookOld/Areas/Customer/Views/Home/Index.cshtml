@model IEnumerable<Book.Models.Product>

<style>
    .product-card {
        border-radius: 1rem;
        transition: transform 0.3s ease-in-out;
        background-color: #708090 ;
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-card img {
            border-radius: 1rem 1rem 0 0;
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .product-title {
        font-weight: bold;
        font-size: 1.1rem;
        margin-bottom: 0.2rem;
        color: #FAF9F6;
    }
    .product-author {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
        color: #FFBF00
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #ADD8E6
    }

    .btn-primary {
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-weight: bold;
        background-color: #555555 ;
    }

    .product-card .btn-primary:hover {
        background-color: #b2beb5 ;
        border-color: #b2beb5 ;
    }
</style>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="product-card text-center">
                <img src="@product.ImageUrl" alt="@product.Title" class="card-img-top"/>
                <div class="card-body p-3">
                    <h5 class="product-title mb-0">@product.Title</h5>
                    <p class="product-author mb-0">by <b>@product.Author</b></p>
                    <p class="product-price mb-2">@product.Price.ToString("c")</p>
                    <a asp-action="Details" asp-controller="Home" asp asp-area="Customer" asp-route-productId="@product.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>